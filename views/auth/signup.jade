extends ../layout

block content
  h2 Signup
  form#form-container(action='/auth/signup', method='POST')
    label(for='username') Username:
    input#username(type='text', name='name', placeholder='Type your username')
    br
    br
    label(for='password') Password:
    input#password(type='password', name='password', placeholder='Type your password')
    br
    br
    label(for='email') E-mail:
    input#email(type='text', name='email', placeholder='Type your e-mail')
    br
    br
    button Create account
    br
    br
    p=message
    p.account-message
    | Do you already have an account?
    a(href='/login') Login
